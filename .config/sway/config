#set $refresh_i3status killall -SIGUSR1 i3status
# Use pactl to adjust volume in pipewire.
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# brightness keys to brightnessctl backlight thing hopefully
bindsym XF86MonBrightnessUp exec --no-startup-id bash ~/bash_scripts/dim.sh + && $refresh_i3status
bindsym XF86MonBrightnessDown exec --no-startup-id bash ~/bash_scripts/dim.sh - && $refresh_i3status
bindsym $mod+Shift+z exec --no-startup-id bash ~/bash_scripts/dim.sh 1 && $refresh_i3status

# Soundboard Shenanegins!
bindsym $mod+Shift+a exec --no-startup-id play ~/Programs/soundboard/duke_nukem_1.mp3
bindsym $mod+Shift+s exec --no-startup-id play ~/Programs/soundboard/duke_nukem_2.mp3
